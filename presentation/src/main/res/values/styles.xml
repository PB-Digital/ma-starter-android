<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blueRibbon800</item>
        <item name="colorPrimaryDark">@color/blueRibbon800</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorMain">@color/black</item>
        <item name="textColorContrasting">@color/white</item>
        <item name="textColorError">@color/pomegranate</item>
        <item name="textColor_2">#b3000000</item>
        <item name="textColor_3">@color/mirage700</item>
        <item name="textColor_4">@color/lightAsh</item>
        <item name="textColor_5">#CC171D24</item>
        <item name="textColor_6">#343836</item>
        <item name="dotColor">@color/white</item>
        <item name="dotColorSelected">@color/sunglow800</item>
        <item name="backgroundClickableCommon">@drawable/bg_clickable_common</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="N">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--Default btns-->
    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontStyle">normal</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BlueButton" parent="@style/Button">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/offset_xhalf</item>
        <item name="android:paddingBottom">@dimen/offset_xhalf</item>
        <item name="android:paddingLeft">@dimen/offset_very_big</item>
        <item name="android:paddingRight">@dimen/offset_very_big</item>
        <item name="android:background">@drawable/bg_blue_button_with_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gray_hint</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="hintTextColor">@color/gray_hint</item>
        <item name="errorTextColor">@color/red</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textColorHighlight">@color/blueRibbon800</item>
    </style>
</resources>